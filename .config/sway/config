exec_always $autospawn $workspace_browser exec chromium --new-window --class=autospawn-chromium
exec_always $autospawn $workspace_tor exec tor-browser
exec_always $autospawn 10 'exec $term -e fish -c "dvim ~/github.com/charleswillis3/rhesus"; exec chromium --new-window ~/drive/books/writing_an_interpreter_in_go_1.7/writing_an_interpreter_in_go_1.7.html'
exec_always $autospawn $workspace_term exec $term

